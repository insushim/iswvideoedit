// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// ==================== 사용자 관련 ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  password      String?
  provider      String?
  providerId    String?
  emailVerified DateTime?

  // Relations
  subscription  Subscription?
  projects      Project[]
  templates     Template[]
  purchases     TemplatePurchase[]
  reviews       TemplateReview[]
  preferences   UserPreferences?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model UserPreferences {
  id                   String @id @default(cuid())
  userId               String @unique
  user                 User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  language             String @default("ko")
  theme                String @default("system")
  defaultQuality       String @default("high")
  defaultAspectRatio   String @default("16:9")
  autoSaveInterval     Int    @default(30)
  emailNotifications   Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== 구독 관련 ====================

model Subscription {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  plan                  String   @default("free") // free, pro, premium, enterprise
  status                String   @default("active") // active, cancelled, past_due, trialing

  stripeCustomerId      String?
  stripeSubscriptionId  String?
  tossCustomerKey       String?
  tossBillingKey        String?

  currentPeriodStart    DateTime?
  currentPeriodEnd      DateTime?

  exportCount           Int      @default(0)
  storageUsed           BigInt   @default(0)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

// ==================== 프로젝트 관련 ====================

model Project {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  title         String
  description   String?
  themeId       String

  status        String    @default("draft") // draft, editing, rendering, completed, failed
  aspectRatio   String    @default("16:9")
  duration      Int       @default(0) // in seconds

  // Stored as JSON
  timeline      Json?
  audio         Json?
  narration     Json?
  subtitles     Json?
  watermark     Json?
  settings      Json?
  introConfig   Json?
  outroConfig   Json?

  thumbnailUrl  String?
  exportUrl     String?
  exportedAt    DateTime?

  renderJobId   String?
  renderProgress Int      @default(0)
  renderError   String?

  // Relations
  photos        Photo[]
  versions      ProjectVersion[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([themeId])
}

model Photo {
  id            String    @id @default(cuid())
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  url           String
  thumbnailUrl  String
  originalUrl   String

  width         Int
  height        Int
  order         Int
  duration      Float     @default(4)

  effect        String?
  transition    String?
  transitionDuration Int? @default(1000)

  // Stored as JSON
  kenBurns      Json?
  textOverlay   Json?
  analysis      Json?
  filters       Json?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([projectId])
  @@index([order])
}

model ProjectVersion {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  version     Int
  data        Json
  description String?

  createdAt   DateTime @default(now())

  @@index([projectId])
  @@index([version])
}

// ==================== 템플릿 관련 ====================

model Template {
  id            String    @id @default(cuid())
  userId        String?
  user          User?     @relation(fields: [userId], references: [id])

  name          String
  nameEn        String?
  description   String?
  themeId       String
  category      String

  // Stored as JSON
  timeline      Json
  settings      Json

  isPublic      Boolean   @default(false)
  isPremium     Boolean   @default(false)
  price         Int?

  thumbnailUrl  String?
  previewUrl    String?

  downloads     Int       @default(0)
  rating        Float     @default(0)
  ratingCount   Int       @default(0)
  tags          String[]

  // Relations
  purchases     TemplatePurchase[]
  reviews       TemplateReview[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([isPublic])
  @@index([themeId])
  @@index([category])
  @@index([isPremium])
}

model TemplatePurchase {
  id          String   @id @default(cuid())
  templateId  String
  template    Template @relation(fields: [templateId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  price       Int

  createdAt   DateTime @default(now())

  @@unique([templateId, userId])
  @@index([userId])
}

model TemplateReview {
  id          String   @id @default(cuid())
  templateId  String
  template    Template @relation(fields: [templateId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  rating      Int
  comment     String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([templateId, userId])
  @@index([templateId])
}

// ==================== 렌더링 관련 ====================

model RenderJob {
  id            String    @id @default(cuid())
  projectId     String

  status        String    @default("pending") // pending, processing, encoding, completed, failed, cancelled
  progress      Int       @default(0)

  quality       String
  format        String
  fps           Int
  aspectRatio   String    @default("16:9")

  outputUrl     String?
  fileSize      BigInt?

  startedAt     DateTime?
  completedAt   DateTime?
  error         String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([status])
  @@index([projectId])
}

// ==================== 음악 관련 ====================

model MusicPreset {
  id          String   @id @default(cuid())
  name        String
  nameEn      String?
  url         String
  duration    Int      // in seconds
  category    String
  mood        String
  bpm         Int?
  tags        String[]
  premium     Boolean  @default(false)
  previewUrl  String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([mood])
  @@index([premium])
}

// ==================== 분석/통계 관련 ====================

model Analytics {
  id          String   @id @default(cuid())
  userId      String?
  projectId   String?
  event       String
  properties  Json?

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([projectId])
  @@index([event])
  @@index([createdAt])
}
